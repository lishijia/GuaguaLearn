/* pages/home/index.wxss */
.home-container {
  min-height: 100vh;
  background: var(--bg-primary);
  padding: var(--spacing-lg);
  padding-bottom: calc(var(--spacing-xl) + env(safe-area-inset-bottom));
}

/* 顶部问候 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.greeting {
  flex: 1;
}

.greeting-text {
  font-size: var(--font-size-lg);
  font-weight: 700;
  color: var(--text-primary);
}

.greeting-sub {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-top: 4rpx;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
}

/* 进度卡片 */
.progress-card {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: 0 8rpx 32rpx rgba(14, 165, 233, 0.25);
  color: white;
  position: relative;
  overflow: hidden;
}

.progress-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.progress-content {
  display: flex;
  align-items: center;
  gap: var(--spacing-xl);
  position: relative;
  z-index: 1;
}

/* 环形进度条 */
.ring-progress {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.ring-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 160rpx;
  height: 160rpx;
}

.ring-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.ring-value {
  font-size: 44rpx;
  font-weight: 700;
  display: block;
}

.ring-label {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 进度详情 */
.progress-details {
  flex: 1;
}

.progress-title {
  font-size: var(--font-size-md);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
}

.progress-stats {
  display: flex;
  gap: var(--spacing-lg);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.stat-icon {
  font-size: 32rpx;
}

.stat-text {
  font-size: var(--font-size-sm);
  opacity: 0.9;
}

/* 快捷操作 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.action-card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  text-align: center;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s;
  position: relative;
}

.action-card:active {
  transform: scale(0.98);
}

.action-icon {
  font-size: 56rpx;
  margin-bottom: var(--spacing-sm);
}

.action-title {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--text-primary);
}

.action-desc {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  margin-top: 4rpx;
}

/* 角标 */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  background: var(--error-color);
  color: white;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 今日任务 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--text-primary);
}

.section-more {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
}

/* 年级选择 */
.grade-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.grade-card {
  display: flex;
  align-items: center;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all 0.2s;
}

.grade-card:active {
  transform: scale(0.98);
}

.grade-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: var(--spacing-md);
}

.grade-icon.g3 { background: linear-gradient(135deg, #22C55E, #16A34A); }
.grade-icon.g4 { background: linear-gradient(135deg, #3B82F6, #2563EB); }
.grade-icon.g5 { background: linear-gradient(135deg, #F59E0B, #D97706); }
.grade-icon.g6 { background: linear-gradient(135deg, #8B5CF6, #7C3AED); }

.grade-info {
  flex: 1;
}

.grade-name {
  font-size: var(--font-size-base);
  font-weight: 600;
  color: var(--text-primary);
}

.grade-count {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  margin-top: 4rpx;
}

.grade-arrow {
  color: var(--text-tertiary);
  font-size: var(--font-size-lg);
}

/* 连续打卡 */
.streak-banner {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  background: linear-gradient(135deg, #FCD34D, #F59E0B);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
  color: #78350F;
  font-weight: 600;
}

.streak-icon {
  font-size: 40rpx;
}

.streak-text {
  font-size: var(--font-size-base);
}

.streak-count {
  font-size: var(--font-size-lg);
  font-weight: 700;
}
