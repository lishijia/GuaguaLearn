/* pages/search/index.wxss */
.search-container {
  min-height: 100vh;
  background: var(--bg-primary);
  padding: var(--spacing-lg);
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

.search-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-sm);
  color: var(--text-tertiary);
}

.search-input {
  flex: 1;
  font-size: var(--font-size-base);
  color: var(--text-primary);
}

.clear-icon {
  padding: var(--spacing-xs);
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.search-btn {
  background: var(--primary-color);
  color: white;
  border: none;
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  font-weight: 500;
}

/* 搜索结果 */
.search-results {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: calc(100vh - 200rpx);
}

.result-header {
  padding: var(--spacing-md);
  background: var(--bg-card);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-md);
}

.result-count {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.result-list {
  flex: 1;
}

.word-item {
  background: var(--bg-card);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-sm);
  box-shadow: var(--shadow-sm);
}

.word-main {
  display: flex;
  align-items: baseline;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-xs);
}

.word-text {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
}

.word-phonetic {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  font-family: monospace;
}

.word-meaning {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-md);
}

.word-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.action-btn {
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-sm);
  border: none;
}

.learn-btn {
  background: var(--primary-color);
  color: white;
}

/* 空结果 */
.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-text {
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.empty-hint {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

/* 搜索历史 */
.search-history {
  padding-top: var(--spacing-md);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
  padding: 0 var(--spacing-sm);
}

.history-title {
  font-size: var(--font-size-base);
  font-weight: 500;
  color: var(--text-secondary);
}

.clear-history {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.history-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  background: var(--bg-card);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.history-icon {
  font-size: 24rpx;
}

.history-text {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
}

.empty-history {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--text-tertiary);
  font-size: var(--font-size-sm);
}

/* 搜索提示 */
.search-tips {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-top: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.tips-title {
  font-size: var(--font-size-base);
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
  display: block;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.tip-item {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 2;
}
